<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="0dp">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:background="#00FFFFFF"
                android:foreground="@drawable/izquier" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/stile1"
                android:gravity="center_horizontal"
                android:text="@string/Wifi"
                android:textColor="@color/text"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/infoMainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear0"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/ipContainer"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ipTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP: "
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/ipValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/portContainer"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/portTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Port: "
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/portValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stateContainer"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stateTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State: "
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/stateValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/scrollContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/infoMainContainer"
            android:layout_above="@+id/Connect"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/headerView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_corners_grey_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:autoSizeMaxTextSize="18dp"
                                android:text="Canal: 1"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/average_channel_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="18dp"
                                android:text="Promedio: 0"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <FrameLayout
                                android:id="@+id/frame_layout_xyplot_channel_1"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/rounded_corners_grey_border"
                                app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/texts_state_container" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corners_grey_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:autoSizeMaxTextSize="18dp"
                                android:text="Canal: 2"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/average_channel_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="18dp"
                                android:text="Promedio: 0"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <FrameLayout
                                android:id="@+id/frame_layout_xyplot_channel_2"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/rounded_corners_grey_border"

                                app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/texts_state_container" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corners_grey_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:autoSizeMaxTextSize="18dp"
                                android:text="Canal: 3"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/average_channel_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="18dp"
                                android:text="Promedio: 0"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp" />

                            <!--                    <TextView-->
                            <!--                        android:id="@+id/mean_channel_3"-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:autoSizeMaxTextSize="18dp"-->
                            <!--                        android:fontFamily="@font/roboto_thin"-->
                            <!--                        android:text="Media: 800"-->
                            <!--                        android:textColor="@color/primary_black"-->
                            <!--                        android:textSize="18sp" />-->

                            <!--                    <TextView-->
                            <!--                        android:id="@+id/min_channel_3"-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:autoSizeMaxTextSize="18dp"-->
                            <!--                        android:fontFamily="@font/roboto_thin"-->
                            <!--                        android:text="Mínimo: 700"-->
                            <!--                        android:textColor="@color/primary_black"-->
                            <!--                        android:textSize="18sp" />-->

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <FrameLayout
                                android:id="@+id/frame_layout_xyplot_channel_3"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/rounded_corners_grey_border"

                                app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/texts_state_container" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_corners_grey_border"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:autoSizeMaxTextSize="18dp"
                                android:text="Canal: 4"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp"

                                />

                            <TextView
                                android:id="@+id/average_channel_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoSizeMaxTextSize="18dp"
                                android:text="Promedio: 0"
                                android:textColor="@color/primary_black"
                                android:textSize="18sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical">


                            <FrameLayout
                                android:id="@+id/frame_layout_xyplot_channel_4"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@drawable/rounded_corners_grey_border"

                                app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/texts_state_container" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <Button
            android:id="@+id/Connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/stilebutton"
            android:drawableStart="@drawable/wifi_connect"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/Conectar" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>